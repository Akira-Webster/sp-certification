@model IEnumerable<SPCertificationTraining.Models.Course>

@{
    ViewBag.Title = "Index";
}

<h2>Courses</h2>

<p>
    @Html.ActionLink("Upload new Course", "Upload")
</p>
<table>
    <tr>
        <th>
            Title
        </th>
        <th>
            Description
        </th>
        <th>
            # of Problems
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotalProblems)
        </td>
        <td>
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
            | @Html.ActionLink("Statistics", "Statistics", new { id = item.ID })
        </td>
    </tr>
}

</table>
